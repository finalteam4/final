	<script>
	$(document).ready(function(){
        //초기 설정
        $('#safeBehavior_category1').css({
            'background': '#05347E',
            'color': '#f3eeea',
            'cursor': 'pointer'
        });

        $('#safeBehavior_category th').click(function(event){
        	event.preventDefault(); // 기본 동작 막기
        	
        	// 모든 카테고리에 대한 스타일 초기화
            $('#safeBehavior_category th').css({
                'background': '',
                'color': '',
                'cursor': 'pointer'
            });

            // 클릭한 카테고리에 대한 스타일 변경
            $(this).css({
                'background': '#05347E',
                'color': '#f3eeea',
                'cursor': 'pointer'
            });

         	// 모든 카테고리에 대한 내용 숨기기
            $('#safeBehavior_contents > div').hide();
            
            // 선택된 카테고리에 해당하는 내용 표시
            var contentId = $(this).data('content-id');
            $('#' + contentId).show();

        });
     	
    });
	
    </script>
